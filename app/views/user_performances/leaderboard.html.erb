<h2>League Champion</h2>
  <div class="jumbotron">
    <table class = "table table-bordered table-striped">
      <thead>
        <tr>
          <th>Username</th>
          <th>Wins</th>
          <th>Losses</th>
          <th>Games Completed</th>
          <th>Win/Loss Ratio</th>
        </tr>
      </thead>
      <tbody>
        <td><%= link_to(User.find(@leaders.first.user).username, show_performance_path(User.find(@leaders.first.user.id))) %></td>
        <td><%= @leaders.first.wins %></td>
        <td><%= @leaders.first.losses %></td>
        <td><%= @leaders.first.games_completed %></td>
        <td><%= @leaders.first.win_loss_ratio %></td>
      </tbody>
    </table>
  </div>
